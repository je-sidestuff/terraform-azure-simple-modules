#          export AZURE_TENANT_ID="${tenant_id}"
#          export AZURE_SUBSCRIPTION_ID="${subscription_id}"
#          az login --identity --client-id ${client_id}
      - name: 'Login via Azure CLI'
        uses: azure/login@v1
        with:
          client-id: ${client_id}
          tenant-id: ${tenant_id}
          subscription-id: ${subscription_id}
